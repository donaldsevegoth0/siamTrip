/* 整个 tabbar 样式 */
.tab-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 2px solid black;  /* 上方黑线隔断 */
}

/* 每个 tab */
.tab-item {
  flex: 1;
  text-align: center;
  height: 100%;
  font-size: 4vw;
  color: #666;
  margin-top: 5%;
  padding: 3px 0;
  position: relative;
}

/* 选中状态 */
.active {
  color: blue;
  font-weight: bold;
}

/* 选中时的下划线 */
.active::after {
  content: "";
  position: absolute;
  top: 44%;
  left: 50%;
  width: 40px;
  height: 2px;
  background-color: blue;
  transform: translateX(-50%);
}

.addButton{
  width: 50px; /* 固定宽度，防止不均匀 */
  height: 50px;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-icon {
  width: 10vw;
  height: 7vw;
}