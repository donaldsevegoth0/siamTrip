          </view>
          <view class="post-bottom">
            <!-- Âú∞ÁêÜ‰ΩçÁΩÆÔºöÂ∑¶‰∏ã -->
            <view class="post-meta-left">üìç{{item.location}}</view>
            <!-- ÁÇπËµûÊï∞ÔºöÂè≥‰∏ã -->
            <view class="post-meta-right">‚ù§Ô∏è {{item.likes}}</view>
