/* 整体容器 */
.container {
  background-color: #f4f4f9; /* 淡灰色背景 */
  padding: 20px;
}

/* 用户头像部分 */
.avatar-container {
  text-align: center;
  padding-top: 30px;
}

.avatar {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  border: 5px solid #fff; /* 增加边框宽度 */
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15); /* 增加阴影效果 */
}

.username {
  margin-top: 15px;
  font-size: 22px;
  font-weight: 600;
  color: #333;
  letter-spacing: 1px; /* 添加字间距 */
  text-transform: capitalize; /* 字符大小写 */
}

/* block部分 */
.posts-block {
  background-color: #fff; /* 白色背景 */
  padding: 40px 30px;
  margin-top: 30px;
  border-radius: 15px;
  height: auto;
  min-height: 100vh; /* 设置最小高度为100vh */
  overflow-y: auto;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1); /* 增加阴影 */
}

/* header部分 */
.posts-header {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  font-weight: 700;
  margin-bottom: 25px;
  color: #333;
  letter-spacing: 1px;
  text-transform: uppercase;
}

/* 单个选项 */
.header-item {
  margin: 0 16px;
  padding: 10px 20px;
  border-radius: 30px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s ease;
  text-transform: uppercase;
}

/* 激活状态 */
.header-item.active {
  background-color: #333; /* 深色背景 */
  color: #fff; /* 白色文字 */
  transform: scale(1.1); /* 点击时放大效果 */
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15); /* 激活状态添加阴影 */
}

/* 非激活状态 */
.header-item:not(.active) {
  color: #999; /* 更柔和的颜色 */
  transform: scale(1);
}

.header-item:hover {
  color: #000;
  background-color: #f0f0f0;
  transform: scale(1.05);
}

/* 卡片部分 */
.cards-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 20px;
}

.card {
  width: 29%; /* 每行两个卡片 */
  margin-bottom: 30px;
  background-color: #333; /* 深色背景 */
  color: white;
  border-radius: 12px;
  padding: 25px;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 15vh;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2); /* 卡片阴影效果 */
  transition: transform 0.3s ease;
}

.card:hover {
  transform: translateY(-5px); /* 鼠标悬停时稍微浮动 */
}

.card-content {
  font-size: 20px;
  font-weight: 500;
  text-align: center;
  letter-spacing: 0.5px;
}
