/**index.wxss**/
.page{
  background-color: #F9F2EF;
  height: 100%;
}

.separator {
  border-top: 2px solid black;  /* 上边框作为分隔线 */
  margin: 20rpx 0;  /* 上下间距 */
}

.welcome {
  display: flex;
  align-items: center; /* Vertically center */
  justify-content: space-between; /* Push text left, image right */
  padding: 0 5vw;
}

.text {
  font-size: 18px;
  font-weight: bold;
}

.logo image {
  width: 20vw; /* Adjust as needed */
  height: 10vh;
}

.search-bar {
  display: flex;
  background: white;
  border-radius: 20px;
  padding: 5px 10px;
  width: 90%;
  margin: 10px auto;
}

.search-input {
  flex: 1;
  border: none;
  background: transparent;
  outline: none;
  padding: 8px;
  font-size: 16px;
}

.search-button {
  flex: 0.13;
  height: 5vh; 
  border: none;
  padding: 0 0;
  background-color: white;
  border-radius: 50%;
}

.search-icon{
  background-color: blueviolet;
  width:10vw;
  height: 5vh;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.search-button image{
  width: 4vw;
  height: 2vh;
}

.functions{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 7vh 7vw;
}

.functions button{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #F9F2EF;
}

.assist image, .post image{
  width:40vw;
  height:20vh;
}

.rec-text{
  font-weight: bolder;
  font-size: 6vw;
  margin: 0vh 5vw;
}

.recommendation view{
  margin: 10vh 5vw;
  font-size: 10vw;
  color: green
}

/* Post card 样式 */
.post-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 16rpx;
}

.post-card {
  width: 48%;
  background-color: #271A1A;
  color: #fff;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.05);
  box-sizing: border-box;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-bottom: 60rpx;
  height: 480rpx;
}

.post-img {
  width: 100%;
  height: 260rpx;
  object-fit: cover;
}

.post-info {
  padding: 12rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.post-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: #fff;
}

.post-user {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;     /* 往下拉开一点距离 */
}

.user-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-bottom: 4rpx;
}

.user-name {
  font-size: 22rpx;
  color: #bbb;
}

.post-bottom {
  position: absolute;
  bottom: 12rpx;
  left: 12rpx;
  right: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.post-meta-left {
  font-size: 22rpx;
  color: #bbb;
}

.post-meta-right {
  font-size: 22rpx;
  color: #f44336;
  text-align: right;
}